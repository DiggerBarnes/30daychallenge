.c-time_line-container
  width: 100%
  display: table
  table-layout: fixed

.c-time_line-column
  width: 50%
  padding: 15px 0
  display: table-cell
  text-align: center

  &:first-child
    border-right: 2px solid $colorBase2

.c-time_line-list
  padding: 0
  margin: 30px 0 0
  list-style: none

  > li
    margin-bottom: 45px
    padding-bottom: 45px
    position: relative

    &:after
      content: ''
      width: 140px
      height: 2px
      position: absolute
      bottom: 0
      left: 50%
      transform: translateX(-50%)
      background: $colorBase2

.c-time_line-item {
  width: 400px
  height: 350px
  margin: 0 auto
  display: block
  background: no-repeat center center
  background-size: cover
}

.c-time_line-benchmark
  padding: 15px 0
  position: absolute
  top: 50%
  right: 0
  transform: translateY(-50%) translateX(50%)

  font-size: 48px
  text-align: center
  background: $colorBase3

  small
    display: block
    font-size: 20px
